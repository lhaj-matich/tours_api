header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    div.header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    if user
         nav.nav.nav--user
            a.nav__el(id='logout') Log out
            a.nav__el(href='#')
                img(src=`/img/users/${user.photo}` alt="User photo" class="nav__user-img")
                span= user.name.split(' ')[0]
    else
        nav.nav.nav--user
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/') Sign up
    